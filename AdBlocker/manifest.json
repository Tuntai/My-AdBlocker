{
	"manifest_version":2,
	"name":"My AdBlocker",
	"version":"1.0",
	"description": "A chrome extension for maximum ad blocking.",
	"permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
	"background": {
        "scripts": ["background.js"]
    },
	"icons":{
		"128":"icon128.png",
		"48" :"icon48.png",
		"16":"icon16.png"
	},
	"browser_action":{
		"default_icon":"icon16.png",
		"default_popup":"popup.html"
	}
}